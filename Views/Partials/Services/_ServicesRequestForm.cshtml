@using System.Web.UI.WebControls
@inherits UmbracoViewPage<BourneCars.Models.ContactUsModel>

@using (Html.BeginUmbracoForm("SubmitForm", "ContactUs", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="custom-sidebar col-md-6 col-sm-12">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="section-title clearfix">
                    <h5>Enquire about</h5>
                    <hr class="custom">
                </div><!-- end section-title -->
            </div>
        </div>
        <div class="row">
            <div class="search-tab lightversion clearfix">
                <div class="search-wrapper">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                           @Html.ValidationSummary()
                        </div><!-- end col -->
                        <div class="col-md-12 col-sm-12 col-xs-12">
                        @Html.TextBoxFor(m => m.Name, null, new { id = "NameTextBox", @class = "form-control", PlaceHolder = "Your Name *" })
                        </div><!-- end col -->
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            @Html.TextBoxFor(m => m.EmailAddress, null, new { id = "Your Email", @class = "form-control", PlaceHolder = "Your Email  *" })
                        </div><!-- end col -->
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            @Html.TextBoxFor(m => m.RequiredPhoneNumber, null, new { id = "YourPhoneNumber", @class = "form-control", PlaceHolder = "Your Phone number  *" })
                        </div><!-- end col -->
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            @Html.TextAreaFor(m => m.Message, new { id = "YourMessage", @class = "form-control", PlaceHolder = "Your message *", cols = "20", rows = "25" })
                        </div><!-- end col -->
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <button class="btn btn-primary col-md-12 col-sm-12 col-xs-12">SUBMIT NOW</button>
                        </div><!-- end col -->
                    </div>
                </div>
            </div>

        </div><!-- end row -->
    </div>
    <!-- end col -->
}
