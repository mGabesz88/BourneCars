@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = "MasterTemplate.cshtml";
}
<div class="section">
<div class="container">
    <div class="row">
        <div class="col-md-9 col-sm-12">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="section-title clearfix">
                        <h5>Audi A8 3.0 TDI S12 Quattro Tiptronic</h5>
                        <hr class="custom">
                    </div><!-- end section-title -->
                </div>
            </div>
            <div class="single-car-wrapper clearfix">
                @{Html.RenderAction("RenderCarCarousel", "CarDetails");}
                @{Html.RenderAction("RenderCarDescription", "CarDetails");}
                @{Html.RenderAction("RenderCarFeatures", "CarDetails");}
            </div><!-- end single-car-wrapper -->
        </div><!-- end col -->
        <div class="custom-sidebar col-md-3 col-sm-12">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="section-title clearfix">
                        <h5>Enquire about</h5>
                        <hr class="custom">
                    </div><!-- end section-title -->
                </div>
            </div>
            <div class="row">
                <div class="search-tab lightversion clearfix">
                    <div class="search-wrapper">
                        <form class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <input type="text" class="form-control" placeholder="Your Name *">
                            </div><!-- end col -->
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <input type="email" class="form-control" placeholder="Your Email *">
                            </div><!-- end col -->
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <input type="text" class="form-control" placeholder="Phone Number *">
                            </div><!-- end col -->
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <textarea class="form-control" placeholder="Your Message"></textarea>
                            </div><!-- end col -->
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <button class="btn btn-primary col-md-12 col-sm-12 col-xs-12">SUBMIT NOW</button>
                            </div><!-- end col -->
                        </form>
                    </div>
                </div>

            </div><!-- end row -->
        </div><!-- end col -->
    </div><!-- end row -->
</div><!-- end container -->
</div><!-- end section -->
@section ScriptForOwlsCarousel
{
    <script type="text/javascript">
        (function($) {
        "use strict";
        $('#myCarousel').carousel({
            interval: 4000
            });

            // handles the carousel thumbnails
            $('[id^=carousel-selector-]').click( function(){
              var id_selector = $(this).attr("id");
              var id = id_selector.substr(id_selector.length -1);
              id = parseInt(id);
              $('#myCarousel').carousel(id);
              $('[id^=carousel-selector-]').removeClass('selected');
              $(this).addClass('selected');
            });

            // when the carousel slides, auto update
            $('#myCarousel').on('slid', function (e) {
              var id = $('.item.active').data('slide-number');
              id = parseInt(id);
              $('[id^=carousel-selector-]').removeClass('selected');
              $('[id=carousel-selector-'+id+']').addClass('selected');
        });
        })(jQuery);
</script>
}